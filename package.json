{
  "name": "@pixi/lights",
  "version": "3.0.0",
  "description": "A plugin that adds deferred lighting to PixiJS v6",
  "author": "Ivan Popelyshev",
  "contributors": [
    "Ivan Popelyshev <ivan.popelyshev@gmail.com>"
  ],
  "namespace": "PIXI.lights",
  "source": "./src/index.ts",
  "main": "./lib/index.js",
  "module": "./lib/index.mjs",
  "types": "./lib/index.d.ts",
  "bundle": "./dist/pixi-lights.js",
  "exports": {
    ".": {
      "import": "./lib/index.mjs",
      "require": "./lib/index.js",
      "types": "./lib/index.d.ts"
    }
  },
  "homepage": "http://www.pixijs.com/",
  "bugs": "https://github.com/pixijs/pixi-lights/issues",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pixijs/pixi-lights.git"
  },
  "scripts": {
    "clean": "rimraf dist/* lib/*",
    "start": "run-p watch demo",
    "watch": "rollup -cw",
    "prebuild": "run-s clean lint types",
    "build": "rollup -c",
    "postbuild": "run-s build:types",
    "prebuild:types": "rimraf lib/**.d.ts",
    "build:types": "tsc --outDir lib --declaration --emitDeclarationOnly",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "types": "tsc -noEmit",
    "demo": "http-server . -o demo -s",
    "release:patch": "npm version patch && npm publish",
    "release:minor": "npm version minor && npm publish",
    "release:major": "npm version major && npm publish",
    "postversion": "run-s build",
    "postpublish": "git push && git push --tags",
    "prepack": "clean-package",
    "postpack": "clean-package restore"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  },
  "clean-package": {
    "indent": 2,
    "remove": [
      "clean-package",
      "scripts",
      "engines",
      "devDependencies",
      "eslintConfig"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@pixi/eslint-config"
    ]
  },
  "files": [
    "dist/",
    "lib/"
  ],
  "peerDependencies": {
    "@pixi/core": "^7.0.0",
    "@pixi/display": "^7.0.0",
    "@pixi/layers": "^2.0.1",
    "@pixi/mesh": "^7.0.0"
  },
  "devDependencies": {
    "@pixi/core": "^7.0.0",
    "@pixi/display": "^7.0.0",
    "@pixi/eslint-config": "^4.0.1",
    "@pixi/layers": "^2.0.1",
    "@pixi/mesh": "^7.0.0",
    "clean-package": "^1.0.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.21.0",
    "http-server": "^14.1.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.5.3",
    "rollup": "^2.50.5",
    "rollup-plugin-esbuild": "^5.0.0",
    "tslib": "^2.0.1",
    "typescript": "^4.3.2"
  }
}
